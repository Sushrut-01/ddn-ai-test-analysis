# ===================================================================
# DDN COMPREHENSIVE TEST CONFIGURATION
# ===================================================================
# Copy this file to .env and fill in your actual values
# This file contains configuration for both basic and advanced test scenarios

# ===================================================================
# BASIC DDN STORAGE ENDPOINTS
# ===================================================================

# DDN EXAScaler (Lustre File System)
DDN_EXASCALER_ENDPOINT=http://exascaler.ddn.local:8080

# DDN AI400X Series (AI Storage Platform)
DDN_AI400X_ENDPOINT=http://ai400x.ddn.local:8080

# DDN Infinia (AI Workload Orchestration)
DDN_INFINIA_ENDPOINT=http://infinia.ddn.local:8080

# DDN IntelliFlash (Enterprise Storage)
DDN_INTELLIFLASH_ENDPOINT=http://intelliflash.ddn.local:8080

# ===================================================================
# DDN MANAGEMENT FRAMEWORK (EMF) API
# ===================================================================
# EXAScaler Management Framework for cluster administration
DDN_EMF_ENDPOINT=http://emf.ddn.local:9090

# ===================================================================
# MULTI-PROTOCOL ENDPOINTS
# ===================================================================

# S3 Protocol Endpoint (EXAScaler Access S3 API)
DDN_S3_ENDPOINT=http://s3.exascaler.ddn.local:9000
DDN_S3_REGION=us-east-1

# NFS Protocol Endpoint
DDN_NFS_ENDPOINT=nfs://nfs.exascaler.ddn.local:/exports

# SMB/CIFS Protocol Endpoint
DDN_SMB_ENDPOINT=smb://smb.exascaler.ddn.local/shares

# ===================================================================
# AUTHENTICATION & CREDENTIALS
# ===================================================================

# DDN API Credentials
DDN_API_KEY=your-ddn-api-key-here
DDN_API_SECRET=your-ddn-api-secret-here

# S3 Access Credentials
DDN_S3_ACCESS_KEY=your-s3-access-key
DDN_S3_SECRET_KEY=your-s3-secret-key

# ===================================================================
# MULTI-TENANCY CONFIGURATION
# ===================================================================

# Tenant 1 Configuration
TENANT1_DOMAIN=tenant1.ddn.local
TENANT1_USER=tenant1_admin
TENANT1_PASS=tenant1_secure_password
TENANT1_VLAN=100
TENANT1_QUOTA_GB=1000
TENANT1_S3_ACCESS_KEY=tenant1_s3_access_key
TENANT1_S3_SECRET_KEY=tenant1_s3_secret_key

# Tenant 2 Configuration
TENANT2_DOMAIN=tenant2.ddn.local
TENANT2_USER=tenant2_admin
TENANT2_PASS=tenant2_secure_password
TENANT2_VLAN=200
TENANT2_QUOTA_GB=500
TENANT2_S3_ACCESS_KEY=tenant2_s3_access_key
TENANT2_S3_SECRET_KEY=tenant2_s3_secret_key

# Tenant 3 Configuration (optional)
TENANT3_DOMAIN=tenant3.ddn.local
TENANT3_USER=tenant3_admin
TENANT3_PASS=tenant3_secure_password
TENANT3_VLAN=300
TENANT3_QUOTA_GB=2000

# ===================================================================
# KERBEROS AUTHENTICATION
# ===================================================================

# Kerberos Configuration for Enhanced Security
KERBEROS_REALM=DDN.LOCAL
KERBEROS_KDC=kdc.ddn.local:88
KERBEROS_ADMIN_SERVER=kadmin.ddn.local:749
KERBEROS_KEYTAB_PATH=/etc/krb5.keytab

# ===================================================================
# NETWORK ISOLATION & SECURITY
# ===================================================================

# VLAN Configuration
VLAN_ISOLATION_ENABLED=true
VLAN_TENANT1_SUBNET=10.100.0.0/24
VLAN_TENANT2_SUBNET=10.200.0.0/24
VLAN_TENANT3_SUBNET=10.300.0.0/24

# Lustre Router Configuration (for Network Isolation Method C)
LUSTRE_ROUTER_ENABLED=false
LUSTRE_ROUTER_ENDPOINT=http://lustre-router.ddn.local

# ===================================================================
# NAMESPACE & NODEMAP CONFIGURATION
# ===================================================================

# Lustre Namespace Paths
LUSTRE_ROOT_PATH=/lustre
TENANT1_NAMESPACE_PATH=/lustre/tenant1
TENANT2_NAMESPACE_PATH=/lustre/tenant2
TENANT3_NAMESPACE_PATH=/lustre/tenant3

# Nodemap Settings
NODEMAP_SQUASH_ROOT=true
NODEMAP_DEFAULT_UID=1000
NODEMAP_DEFAULT_GID=1000

# ===================================================================
# QUOTA MANAGEMENT
# ===================================================================

# Quota Enforcement
QUOTA_ENFORCEMENT_ENABLED=true
QUOTA_GRACE_PERIOD_HOURS=24
QUOTA_SOFT_LIMIT_PERCENTAGE=90

# Alert Thresholds
QUOTA_WARNING_THRESHOLD=80
QUOTA_CRITICAL_THRESHOLD=95

# ===================================================================
# DATA GOVERNANCE & COMPLIANCE
# ===================================================================

# Encryption Settings
ENCRYPTION_AT_REST_ENABLED=true
ENCRYPTION_ALGORITHM=AES-256-GCM
ENCRYPTION_KEY_ROTATION_DAYS=90

# Audit Logging
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365
AUDIT_LOG_STORAGE_PATH=/var/log/ddn/audit

# Data Retention Policies
DATA_RETENTION_ENABLED=true
DEFAULT_RETENTION_DAYS=365
COMPLIANCE_MODE=WORM

# ===================================================================
# JENKINS INTEGRATION
# ===================================================================

# Jenkins Configuration
JENKINS_URL=http://localhost:8080
JENKINS_USER=admin
JENKINS_TOKEN=your-jenkins-api-token
JENKINS_JOB_NAME=DDN-Storage-Tests

# Jenkins Build Information (auto-populated by Jenkins)
BUILD_ID=
BUILD_NUMBER=
BUILD_URL=
JOB_NAME=
GIT_COMMIT=
GIT_BRANCH=

# ===================================================================
# N8N WORKFLOW INTEGRATION
# ===================================================================

# n8n Webhook Endpoints
N8N_WEBHOOK=http://localhost:5678/webhook/ddn-test-failure
N8N_MANUAL_TRIGGER_WEBHOOK=http://localhost:5678/webhook/manual-trigger
N8N_REFINEMENT_WEBHOOK=http://localhost:5678/webhook/refinement

# ===================================================================
# DASHBOARD & API INTEGRATION
# ===================================================================

# Dashboard API
DASHBOARD_API=http://localhost:5005
DASHBOARD_UI=http://localhost:5173

# API Endpoints
API_BASE_URL=http://localhost:5005/api/v1
API_TIMEOUT=30000

# ===================================================================
# AI ANALYSIS CONFIGURATION
# ===================================================================

# Claude AI (Anthropic)
ANTHROPIC_API_KEY=sk-ant-xxxxx
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# OpenAI (for embeddings)
OPENAI_API_KEY=sk-xxxxx

# Pinecone Vector Database (RAG)
PINECONE_API_KEY=xxxxx
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=ddn-test-failures

# LangGraph Configuration
LANGGRAPH_API_ENDPOINT=http://localhost:5000

# ===================================================================
# DATABASE CONFIGURATION
# ===================================================================

# MongoDB (NoSQL - Document Storage)
MONGODB_URI=mongodb://localhost:27017/ddn_tests
MONGODB_DATABASE=ddn_tests
MONGODB_COLLECTION_FAILURES=test_failures
MONGODB_COLLECTION_ANALYSIS=analysis_results

# PostgreSQL (SQL - Relational Data)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ddn_tests
POSTGRES_USER=ddn_admin
POSTGRES_PASSWORD=secure_password

# ===================================================================
# TEST EXECUTION CONFIGURATION
# ===================================================================

# Test Timeouts (milliseconds)
TEST_TIMEOUT=30000
INTEGRATION_TEST_TIMEOUT=60000
PERFORMANCE_TEST_TIMEOUT=120000

# Test Execution
NODE_ENV=test
LOG_LEVEL=info
VERBOSE_LOGGING=false

# Test Data Generation
GENERATE_TEST_DATA=true
TEST_DATA_SIZE_GB=10
TEST_FILE_COUNT=100

# ===================================================================
# PERFORMANCE BENCHMARKING
# ===================================================================

# Benchmark Configuration
BENCHMARK_ENABLED=true
BENCHMARK_DATASET_SIZE_GB=500
BENCHMARK_BATCH_SIZE=256
BENCHMARK_NUM_WORKERS=32
BENCHMARK_DURATION_SEC=120

# Expected Performance Metrics (for validation)
EXPECTED_SPEEDUP_FACTOR=4.0
EXPECTED_LATENCY_US=100
EXPECTED_THROUGHPUT_GBPS=50

# ===================================================================
# NOTIFICATION CHANNELS
# ===================================================================

# Microsoft Teams
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/xxx

# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#ddn-test-alerts

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@yourcompany.com
SMTP_PASSWORD=your-smtp-password
ALERT_EMAIL_TO=team@yourcompany.com

# ===================================================================
# GITHUB INTEGRATION
# ===================================================================

# GitHub Repository
GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_REPO=your-org/ddn-storage-config
GITHUB_BRANCH=main

# GitHub API
GITHUB_API_URL=https://api.github.com

# ===================================================================
# JIRA INTEGRATION (Optional)
# ===================================================================

# Jira Configuration
JIRA_URL=https://yourcompany.atlassian.net
JIRA_USER=your-email@yourcompany.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=DDN
JIRA_AUTO_CREATE_TICKETS=false

# ===================================================================
# MONITORING & OBSERVABILITY
# ===================================================================

# Prometheus Metrics
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Grafana Dashboard
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your-grafana-api-key

# Health Check Endpoints
HEALTH_CHECK_INTERVAL_SEC=60
HEALTH_CHECK_TIMEOUT_SEC=10

# ===================================================================
# SECURITY & COMPLIANCE
# ===================================================================

# Security Settings
TLS_ENABLED=true
TLS_CERT_PATH=/etc/ssl/certs/ddn.crt
TLS_KEY_PATH=/etc/ssl/private/ddn.key
TLS_VERIFY_PEER=true

# Compliance
HIPAA_COMPLIANCE_MODE=false
GDPR_COMPLIANCE_MODE=true
SOC2_COMPLIANCE_MODE=false

# ===================================================================
# ADVANCED FEATURES
# ===================================================================

# Feature Flags
ENABLE_DOMAIN_ISOLATION_TESTS=true
ENABLE_MULTITENANCY_TESTS=true
ENABLE_QUOTA_TESTS=true
ENABLE_S3_TESTS=true
ENABLE_NFS_TESTS=false
ENABLE_KERBEROS_TESTS=true
ENABLE_PERFORMANCE_TESTS=true

# Experimental Features
ENABLE_AI_RECOMMENDATION=true
ENABLE_AUTO_REMEDIATION=false
ENABLE_PREDICTIVE_ANALYSIS=false

