# DDN AI Test Failure Analysis - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git!

# ============================================================================
# AI SERVICES
# ============================================================================

# Anthropic Claude API (Required)
ANTHROPIC_API_KEY=sk-ant-api03-...

# OpenAI API for embeddings (Required for RAG)
OPENAI_API_KEY=sk-proj-...

# ============================================================================
# DATABASES
# ============================================================================

# MongoDB (Required)
MONGODB_URI=mongodb://localhost:27017/ddn
MONGODB_DB_NAME=ddn

# PostgreSQL (Optional)
POSTGRES_URI=postgresql://user:password@localhost:5432/ddn

# Pinecone Vector Database (Required for RAG)
PINECONE_API_KEY=...
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX=ddn-error-solutions

# ============================================================================
# SOURCE SYSTEMS
# ============================================================================

# GitHub
GITHUB_TOKEN=ghp_...
GITHUB_REPO=ddn/exascaler

# Jenkins
JENKINS_URL=https://jenkins.ddn.com
JENKINS_USER=admin
JENKINS_TOKEN=...

# ============================================================================
# MCP SERVERS
# ============================================================================

# MongoDB MCP Server
MONGODB_MCP_URL=http://localhost:5001/sse
MONGODB_MCP_TOKEN=your-secret-token

# GitHub MCP Server
GITHUB_MCP_URL=http://localhost:5002/sse
GITHUB_MCP_TOKEN=your-secret-token

# ============================================================================
# NOTIFICATIONS
# ============================================================================

# Microsoft Teams
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/...

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Dashboard URL
DASHBOARD_URL=http://localhost:3000

# LangGraph Service
LANGGRAPH_SERVICE_URL=http://localhost:5000

# Debug Mode
DEBUG=False

# Aging Threshold (days)
AGING_THRESHOLD_DAYS=5

# Token Budget
MAX_TOKENS=8000

# ============================================================================
# OPTIONAL: PRODUCTION SETTINGS
# ============================================================================

# Flask
FLASK_ENV=production
FLASK_SECRET_KEY=your-secret-key-here

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/ddn-ai/app.log
