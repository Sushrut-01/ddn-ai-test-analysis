{
  "webhook": {
    "description": "Jenkins webhook configuration for DDN AI System",
    "endpoint": "http://n8n:5678/webhook/ddn-test-failure",
    "triggers": [
      "BUILD_COMPLETED",
      "TEST_FAILED",
      "BUILD_FAILED"
    ],
    "payload_structure": {
      "build_id": "string (required)",
      "job_name": "string (required)",
      "build_number": "integer (required)",
      "status": "string (SUCCESS|FAILURE|UNSTABLE)",
      "timestamp": "string (ISO 8601 format)",
      "duration": "integer (milliseconds)",
      "test_results": {
        "total": "integer",
        "passed": "integer",
        "failed": "integer",
        "skipped": "integer"
      },
      "failed_tests": [
        {
          "test_name": "string",
          "class_name": "string",
          "error_message": "string",
          "stack_trace": "string",
          "duration": "integer"
        }
      ],
      "console_log_url": "string",
      "build_url": "string"
    }
  },
  "jenkins_plugin_config": {
    "plugin_name": "Generic Webhook Trigger Plugin",
    "install_command": "Install from Jenkins Plugin Manager",
    "configuration_steps": [
      "1. Navigate to Jenkins > Manage Jenkins > Manage Plugins",
      "2. Search for 'Generic Webhook Trigger Plugin'",
      "3. Install and restart Jenkins",
      "4. Configure webhook in job settings",
      "5. Add webhook URL: http://n8n:5678/webhook/ddn-test-failure",
      "6. Select triggers: Build completed, Test failed",
      "7. Configure payload mapping as shown above"
    ]
  },
  "alternative_webhook_urls": {
    "auto_trigger": "http://n8n:5678/webhook/ddn-test-failure",
    "manual_trigger": "http://n8n:5678/webhook/ddn-manual-trigger",
    "refinement": "http://n8n:5678/webhook/ddn-refinement"
  }
}
