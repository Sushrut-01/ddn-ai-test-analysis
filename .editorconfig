root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.{py,pyw}]
max_line_length = 100
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,json}]
max_line_length = 100
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
max_line_length = 100
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[{*.yml,*.yaml}]
indent_style = space
indent_size = 2
